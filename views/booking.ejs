<%- include('./partials/head')%>
<main id="booking" class="two">
    <div class="left">
        <div class="text">
            <h2>BOOK A TABLE</h2>
            <div class="line"></div>
            <form action="/newBook" method="POST">
                <input type="text" name="name" id="" placeholder="Name">
                <input type="email" name="email" id="" placeholder="Email">
                <input type="tel" name="phone" id="" placeholder="Phone">
                <select name="people" id="">
                    <option value="0" selected disabled>People</option>
                    <option value="1">1 person</option>
                    <option value="2">2 person</option>
                    <option value="3">3 person</option>
                    <option value="4">4 person</option>
                    <option value="5">5 person</option>
                    <option value="5">5 person</option>
                    <option value="6">6 person</option>
                    <option value="7">7 person</option>
                    <option value="8">8 person</option>
                    <option value="9">9 person</option>
                </select>
                <input type="text" name="date" id="" placeholder="Date" onfocus="(this.type='date')" onblur="(this.type='text')">
                <select name="time" id="">
                    <option value="0" selected disabled>Time</option>
                    <option value="18">18:00</option>
                    <option value="19">19:00</option>
                    <option value="20">20:00</option>
                    <option value="21">21:00</option>
                </select>
                <input type="submit" value="BOOK NOW" class="btn">
            </form>
        </div>
    </div>
    <div class="right">
        <%- include('./partials/image', { index: 0 })%>
    </div>
    <p class="maintext">Mon - Fri: 8PM - 10PM, Sat - Sun: 8PM - 3AM, Phone: +40 729 131 637/+40 726 458 782</p>
</main>
<%- include('./partials/foot')%>
